{
  "heardle-name": "Sonic",
  "guess-number": 6,
  "times": [
    1, 2, 4, 8, 16, 32
  ],
  "separator": [
    8, 16, 28, 44, 64, 100
  ],
  "tag-list": [
    {
      "name": "year",
      "display-name": "Year",
      "type": "plus-minus",
      "word": {
        "+": "Older than {guess}",
        "-": "Newer than {guess}",
        "=": "{guess} is correct"
      }
    },
    {
      "name": "console",
      "display-name": "Console",
      "type": "equal",
      "word": {
        "=": "{guess} is correct",
        "!=": "{guess} is incorrect"
      }
    },
    {
      "name": "series",
      "display-name": "Series",
      "type": "equal",
      "word": {
        "=": "{guess} is correct",
        "!=": "{guess} is incorrect"
      }
    },
    {
      "name": "game",
      "display-name": "Game",
      "type": "equal",
      "word": {
        "=": "{guess} is correct",
        "!=": "{guess} is incorrect"
      }
    },
    {
      "name": "game-genre",
      "display-name": "Genre",
      "type": "equal",
      "word": {
        "=": "{guess} is correct",
        "!=": "{guess} is incorrect"
      }
    },
    {
      "name": "green-hills",
      "display-name": "Green Hills",
      "type": "tag-value",
      "word": {
        "*": "Is the music you have to guess Green Hill? {value}",
        "true": "Yes",
        "false": "No"
      }
    }
  ],
  "infinite": true,

  "phrases": {
    "song-list": "Click Here for the full list of {heardle-name} Heardle songs.",
    "infinite-pub-text": "Click Here to play \n {heardle-name} Heardle Infinite!",
    "skipped": "SKIPPED",
    "skip-button": "Skip",
    "submit-button": "Submit",
    "next-button": "Next",
    "share-button": "Share",

    "infinite-win-text": "Poyoo!! You got the {heardle-name} song within {unlocked-time} seconds.",
    "default-win-text": "You got today's {heardle-name} Heardle within {unlocked-time} seconds.",

    "infinite-lose-text": "You didn't get the {heardle-name} song. Too bad, you can always try again!",
    "default-lose-text": "You didn't get today's {heardle-name} Heardle. Better luck tomorrow! \uD83D\uDC8E",

    "timer-text": "The next {heardle-name} song starts in:"
  },

  "!COMMENT!": "Variant link is  \"infinite\" when infinite is false, or \"base game\" when infinite is true",
  "variant-link": "https://s4pph1r3-dev.github.io/sonic-heardle/",
  "song-list-link": "https://raw.githubusercontent.com/s4pph1r3-dev/Heardle-Base/refs/heads/main/src/settings/music.json"
}
